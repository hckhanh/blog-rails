<%= content_for :article_header do %>
  <div class="header header-filter" style="background-image: url('http://demos.creative-tim.com/material-kit-pro/assets/img/bg10.jpg');">
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <h2 class="title title-header text-center">The more we share, the more we have.</h2>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render 'articles/layout' do %>
  <h2 class="title">Write an article</h2>
  <p class="description">Any topic you share, we always appreciate it.</p>
  <%= form_with model: @article, class: 'article-form' do |f| %>
    <% if @article.errors.any? %>
      <div class="alert alert-danger">
        <div class="container-fluid">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true"><i class="material-icons">clear</i></span>
          </button>
          <b><%= pluralize @article.errors.count, 'error' %> need to be fixed:</b>
          <ul class="error-list">
            <% @article.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    <%= f.hidden_field :user_id %>
    <div class="form-group label-floating">
      <%= f.label :title, class: 'control-label' %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group label-floating">
      <%= f.label :text, class: 'control-label' %>
      <%= f.text_area :text, class: 'form-control', rows: 15 %>
    </div>
    <%= f.submit 'Create article', class: 'btn btn-primary' %>
  <% end %>
<% end %>
